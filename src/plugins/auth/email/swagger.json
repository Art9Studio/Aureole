{
  "swagger": "2.0",
  "info": {
    "title": "Title",
    "description": "Title",
    "version": "1.0.0"
  },
  "host": "www",
  "schemes": [
    "https"
  ],
  "paths": {
    "/login": {
      "get": {
        "summary": "Passwordless Email authentication",
        "description": "Authenticate user by following link from email",
        "tags": [
          "Passwordless Email AuthN"
        ],
        "parameters": [
          {
            "name": "token",
            "description": "JWT generated by Aureole on start authentication step",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/email/send": {
      "post": {
        "summary": "Magic link send",
        "description": "Send magic link to user email",
        "tags": [
          "Passwordless Email AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "description": "User email",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success sending magic link"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "email": {
      "type": "object",
      "required": [
        "email"
      ],
      "properties": {
        "email": {
          "type": "string"
        }
      }
    }
  }
}
