{
  "swagger": "2.0",
  "info": {
    "title": "Title",
    "description": "Title",
    "version": "1.0.0"
  },
  "host": "www",
  "schemes": [
    "https"
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Passwordless Phone authentication",
        "description": "Authenticate user by following sendind and verifying OTP",
        "tags": [
          "Passwordless Phone AuthN"
        ],
        "parameters": [
          {
            "name": "otp",
            "description": "JWT generated by Aureole on start authentication step and OTP entered by user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/otp"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Error response",
            "schema": {
              "description": "JWT, which handles max attempts feature",
              "$ref": "#/definitions/token"
            }
          }
        }
      }
    },
    "/phone/send": {
      "post": {
        "summary": "OTP send",
        "description": "Send one time password to user phone",
        "tags": [
          "Passwordless Phone AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "phone",
            "description": "User phone",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/phone"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success sending OTP",
            "schema": {
              "description": "JWT, which handles max attempts feature",
              "$ref": "#/definitions/token"
            }
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/phone/resend": {
      "post": {
        "summary": "Resend OTP",
        "description": "Resend one time password to user phone",
        "tags": [
          "Passwordless Phone AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "token",
            "description": "JWT that have been used for the previous requests to Aureole",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/token"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful resend send new OTP to user and returns new JWT, which handles max attempts feature",
            "schema": {
              "$ref": "#/definitions/token"
            }
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "token": {
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "title": "Json Web Token",
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
        }
      }
    },
    "phone": {
      "type": "object",
      "required": [
        "phone"
      ],
      "properties": {
        "phone": {
          "type": "string"
        }
      }
    },
    "otp": {
      "type": "object",
      "required": [
        "token",
        "otp"
      ],
      "properties": {
        "token": {
          "title": "Json Web Token",
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
        },
        "otp": {
          "title": "One time password",
          "type": "string",
          "example": "A123456B"
        }
      }
    }
  }
}
