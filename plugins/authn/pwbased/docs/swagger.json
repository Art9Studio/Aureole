{
  "swagger": "2.0",
  "info": {
    "title": "Title",
    "description": "Title",
    "version": "1.0.0"
  },
  "host": "www",
  "schemes": [
    "https"
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Password-based authentication",
        "description": "Authenticate user by some credential and password",
        "tags": [
          "Password-based AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "credential",
            "description": "Some credential and password",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/credential"
            }
          }
        ],
        "responses": {}
      }
    },
    "/password-based/register": {
      "post": {
        "summary": "Password-based registration",
        "description": "Register user by some credential and password",
        "tags": [
          "Password-based AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "credential",
            "description": "Some credential and password",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/credential"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful registration"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/password-based/reset-password": {
      "post": {
        "summary": "Reset link sending",
        "description": "Send reset link to user email",
        "tags": [
          "Password-based AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "description": "User email",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful link sending"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/password-based/reset-password/confirm": {
      "get": {
        "summary": "Confirm password reset",
        "description": "User confirm reset password by following the reset link",
        "tags": [
          "Password-based AuthN"
        ],
        "parameters": [
          {
            "name": "token",
            "description": "JWT generated by Aureole on link sending step",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "redirect_url",
            "description": "URL to redirect user",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful link sending"
          },
          "302": {
            "description": "Redirect to URL"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/password-based/verify-email": {
      "post": {
        "summary": "Verify email link sending",
        "description": "Send verify email link to user email",
        "tags": [
          "Password-based AuthN"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "description": "User email",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful link sending"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/password-based/verify-email/confirm": {
      "get": {
        "summary": "Verify email",
        "description": "Verify user email by following the verifying link",
        "tags": [
          "Password-based AuthN"
        ],
        "parameters": [
          {
            "name": "token",
            "description": "JWT generated by Aureole on link sending step",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "redirect_url",
            "description": "URL to redirect user",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful link sending"
          },
          "302": {
            "description": "Redirect to URL"
          },
          "400": {
            "description": "Bad request error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "token": {
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "title": "Json Web Token",
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
        }
      }
    },
    "email": {
      "type": "object",
      "required": [
        "email"
      ],
      "properties": {
        "email": {
          "type": "string"
        }
      }
    },
    "credential": {
      "type": "object",
      "required": [
        "password"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
